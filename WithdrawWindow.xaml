<Window x:Class="AtmApplicationWPF.WithdrawWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Withdraw" Height="200" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="WithdrawAmountTextBox" Width="200" Margin="10" />
            <Button x:Name="WithdrawButton" Content="Withdraw" Width="200" Margin="10" Click="WithdrawButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
