<Window x:Class="AtmApplicationWPF.DepositWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Deposit" Height="200" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="DepositAmountTextBox" Width="200" Margin="10" />
            <Button x:Name="DepositButton" Content="Deposit" Width="200" Margin="10" Click="DepositButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
