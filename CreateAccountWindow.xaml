<Window x:Class="AtmApplicationWPF.CreateAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Account" Height="400" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="AccountNumberTextBox" GotFocus="RemoveText" LostFocus="AddText" Width="200" Margin="10" />
            <TextBox x:Name="AccountHolderTextBox" GotFocus="RemoveText" LostFocus="AddText" Width="200" Margin="10"/>
            <TextBox x:Name="InitialDepositTextBox" GotFocus="RemoveText" LostFocus="AddText" Width="200" Margin="10" />
            <TextBox x:Name="InterestRateTextBox" GotFocus="RemoveText" LostFocus="AddText" Width="200" Margin="10" />
            <Button x:Name="CreateAccountButton" Content="Create Account" Width="200" Margin="10" Click="CreateAccountButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
