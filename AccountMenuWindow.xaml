<Window x:Class="AtmApplicationWPF.AccountMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account Menu" Height="400" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="CheckBalanceButton" Content="Check Balance" Width="200" Margin="10" Click="CheckBalanceButton_Click"/>
            <Button x:Name="DepositButton" Content="Deposit" Width="200" Margin="10" Click="DepositButton_Click"/>
            <Button x:Name="WithdrawButton" Content="Withdraw" Width="200" Margin="10" Click="WithdrawButton_Click"/>
            <Button x:Name="DisplayTransactionsButton" Content="Display Transactions" Width="200" Margin="10" Click="DisplayTransactionsButton_Click"/>
            <Button x:Name="ExitButton" Content="Exit" Width="200" Margin="10" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
